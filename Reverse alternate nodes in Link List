class Solution {
    public static void rearrange(Node odd) {
        // add your code here
        Node dummyhead=new Node(0);
        Node dummy=dummyhead;
        Node prev=null;
        
        Node temp=odd;int i=0;
        while(temp!=null && temp.next!=null )
        {
            
            dummy.next=temp.next;
            dummy=dummy.next;
            temp.next = temp.next.next; 
           prev=temp;
              temp = temp.next;  
        }
            
          
        prev.next=reverse(dummyhead.next);
        
    }
     private static Node reverse(Node temp)
    {    Node prev=null;
            
       while(temp!=null)
        {
            Node next=temp.next;
            temp.next=prev;
            prev=temp;
            temp=next;
        }
       return prev;
    }
}
